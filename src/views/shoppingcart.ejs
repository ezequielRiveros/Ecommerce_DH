  <!-- js for the counter of products -->
<script> 
        var i = 1;
        var j = 1;
        var k = 11900;
    
        
        function incrementI() {
        if (i < 10) {
         i++;
         k+=1500;
        }
         document.getElementById("display").innerHTML = i;
         document.getElementById("total").innerHTML = k;
        }
    
         function decrementI() {
        if (i > 1) {
        k-=1500;
        --i;
        } 
        document.getElementById("display").innerHTML = i;
        document.getElementById("total").innerHTML = k;
    
        }
    
        function incrementJ() {
        if (j < 10) {
         j++;
